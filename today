---
- name: Copy files and execute script
  hosts: target_host
  become: yes
  tasks:
    - name: Ensure the /home/name/ directory exists
      file:
        path: /home/name/
        state: directory
        owner: name
        group: name
        mode: '0755'

    - name: Copy input.csv to /home/name/
      copy:
        src: input.csv
        dest: /home/name/
        owner: name
        group: name
        mode: '0644'

    - name: Copy splunk.sh to /home/name/
      copy:
        src: splunk.sh
        dest: /home/name/
        owner: name
        group: name
        mode: '0755'

    - name: Execute splunk.sh
      command: /home/name/splunk.sh
      args:
        chdir: /home/name/
